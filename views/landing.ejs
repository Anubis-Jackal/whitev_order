<!DOCTYPE html>
<html>
    <head>
        <title>WhiteV Order</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
        <link rel="stylesheet" type="text/css" href="/stylesheets/landing.css">
        <link href="https://fonts.googleapis.com/css?family=Lato:400,700" rel="stylesheet">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.3/modernizr.min.js" type="text/javascript" async></script>
    </head>
    <body>
    <nav class="navbar navbar-default" id="landing-navbar">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="/">Home</a>
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav navbar-right">
                    <!--checks if user is logged in to determine navbar content-->
                    <% if(!currentUser){ %>
                        <li><a href="/login">Login (Admin Only)</a></li>
                        <!--<li><a href="/register">Register</a></li>-->
                    <% } else { %>
                        <li><a href="#">Signed in as <%= currentUser.username %></a></li>
                        <li><a href="/orders">Manage Orders</a></li>
                        <li><a href="/logout">Logout</a></li>
                    <% } %>
                </ul>
            </div>
        </div>
    </nav>
    <!--display either error or success flash message-->
    <div class="container">
    <div class="container" id="landing-flash">
        <% if (error && error.length > 0){ %>
            <div class="alert alert-danger" role="alert">
                <%= error %>
            </div>
        <% } %>
        <% if (success && success.length > 0){ %>
            <div class="alert alert-success" role="alert">
                <%= success %>
            </div>
        <% } %>
    </div>
    <div class="container" id="landing-header">
    	<div class="row">
    		<div class="col-lg-12">
    			<div id="content">
    				<h1>WhiteV Order</h1>
    				<h3>Time to Order Your Flowers Online</h3>
    				<hr>
    				<a class="btn btn-primary btn-lg" href="/orders/new">Add New Order</a>
    			</div>		
    		</div>
    	</div>
    </div>
    
    <!--animated background elements-->
    <ul class="slideshow">
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
    </ul>
    
    </div>
<% include partials/footer %>